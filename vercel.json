{
    "version": 2,
    "builds": [
      {
        "src": "api/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/index.html"
      }
    ],
    "rewrites": [ 
      { 
        "source": "/api/(.*)", 
        "destination": "/api/server.js" 
      }, 
      { 
        "source": "/(.*)", 
        "destination": "/client/index.html" 
        } 
      ]
  }
